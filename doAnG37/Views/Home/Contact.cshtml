    <link rel="stylesheet" type="text/css" href="../style.css">

    <style>
           .container {
            max-width: 90%;
          }
            /* Container and layout */
            .container_frame {
                padding: 40px 15px;
                background-color: #f9f9f9;
            }

            .content_contact {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                padding: 20px 130px;
            }

            .left_contact, .right_contact {
                flex: 1;
                min-width: 300px;
            }

            /* Left Contact Section */
            .segTitle {
                font-family: 'Times New Roman', Times, serif;
                font-size: 36px;
                font-weight: 700;
                color: #4a2c2a;
                margin-bottom: 30px;
            }

            .info_contact .item {
                display: flex;
                align-items: flex-start;
                margin-bottom: 20px;
            }

            .info_contact .icon {
                width: 24px;
                height: 24px;
                margin-right: 15px;
                color: #4a2c2a;
            }

            .info_contact .icon i {
                width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        color: #7F6F4C;
        margin-top: 2px;
        flex: 0 0 auto;
        border: 1px solid #7F6F4C;
            }

            .info_contact .text .label {
             font-family: "Open Sans", sans-serif;
                font-size: 15px;
                font-weight: 500;
                color: #666;
                margin-bottom: 5px;
            }

            .info_contact .text .name {
                font-family: "Open Sans", sans-serif;
                font-size: 16px;
                font-weight: 600;
                color: #454545;
            }

            /* Right Contact Section (Form) */
            .form_contact {
                max-width: 100%;
            }

            .form_control {
                margin-bottom: 20px;
                gap: 20px;
            }

            .form_control label {
              font-family: "Open Sans", sans-serif;
                font-size: 16px;
                font-weight: 500;
                color: #4a2c2a;
                margin-bottom: 8px;
                display: block;
            }

            .form_control input {
               width: 100%;
        border-width: 1px;
        border-style: solid;
        border-color: rgb(210, 210, 210);
        border-image: initial;
        background: rgb(255, 255, 255);
        margin: 12px 0px 0px;
        padding: 10px 0px;
            }

            .form_group {
                display: flex;
                gap: 30px;
            }

            .form_group .form_control {
                flex: 1;
            }

            /* Button */
            .btn_primary {
                background-color: #7f6f4c;
                color: #fff;
               font-family: "Open Sans", sans-serif;
                font-size: 16px;
                font-weight: 500;
                padding: 13px 30px;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .btn_primary:hover {
                background-color: #6b4521;
            }

            /* Responsive Adjustments */
        @@media (min-width: 920px) {
            .footer-menu.footer-menu-002 {
              margin-left: 60px;
            }
          }
        @@media (max-width: 768px) {
                .content_contact {
                    flex-direction: column;
                }

                .form_group {
                    flex-direction: column;
                    gap: 0;
                }
                 .content_contact {
                padding: 0px;
            }
            }
    </style>
</head>
<body>
    <div class="container_frame">
        <div class="row content_contact">
            <div class="col-md-6 left_contact">
                <h1 class="segTitle">Liên hệ với chúng tôi</h1>
                <div class="info_contact">
                    <div class="item d-flex">
                        <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                        <div class="text">
                            <div class="label">Địa chỉ</div>
                            <div class="name">Ocean Park, Gia Lâm, TP. Hà Nội</div>
                        </div>
                    </div>
                    <div class="item d-flex">
                        <div class="icon"><i class="fas fa-envelope"></i></div>
                        <div class="text">
                            <div class="label">Email</div>
                            <div class="name">Dreamylovebridal@gmail.com</div>
                        </div>
                    </div>
                    <div class="item d-flex">
                        <div class="icon"><i class="fas fa-phone-alt"></i></div>
                        <div class="text">
                            <div class="label">Số điện thoại</div>
                            <div class="name">0349 021 626</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 right_contact">
                <div class="form_contact">
                    <div role="form" class="wpcf7" id="wpcf7-f10329-o1" lang="vi" dir="ltr">
