    <script>
        $(document).ready(function () {
          let currentModalIndex = 0;
          const thumbnails = document.querySelectorAll(".thumbnail");
          const images = Array.from(thumbnails).map((thumb) => ({
            src: thumb.src,
            alt: thumb.alt,
          }));

          function changeImage(element) {
            const mainImage = document.getElementById("main-image");
            const thumbnails = document.querySelectorAll(".thumbnail");
            mainImage.src = element.src;
            mainImage.alt = element.alt;
            mainImage.classList.remove("fade-in");
            void mainImage.offsetWidth; // Trigger reflow để reset animation
            mainImage.classList.add("fade-in");
            thumbnails.forEach((thumb) => thumb.classList.remove("active"));
            element.classList.add("active");
            // Cập nhật chỉ số hiện tại cho modal
            currentModalIndex = Array.from(thumbnails).indexOf(element);
          }

          function autoSlide() {
            const thumbnails = document.querySelectorAll(".thumbnail");
            let currentIndex = 0;

            thumbnails.forEach((thumb, index) => {
              if (thumb.classList.contains("active")) {
                currentIndex = index;
              }
            });

            currentIndex = (currentIndex + 1) % thumbnails.length;
            changeImage(thumbnails[currentIndex]);
          }

          // Gán sự kiện click cho các thumbnail
          $(".thumbnail").on("click", function () {
            changeImage(this);
          });

          // Chạy autoSlide mỗi 3 giây
          setInterval(autoSlide, 4000);

          // Đảm bảo ảnh đầu tiên được chọn khi tải trang
          const firstThumbnail = document.querySelector(".thumbnail");
          if (firstThumbnail) {
            changeImage(firstThumbnail);
          }

          // Modal gallery logic
          const modal = document.getElementById("modal-gallery");
          const modalImage = document.getElementById("modal-image");
          const mainImage = document.getElementById("main-image");
          const prevBtn = document.getElementById("modal-prev");
          const nextBtn = document.getElementById("modal-next");

          // Mở modal khi nhấp vào ảnh chính
          mainImage.addEventListener("click", function () {
            modalImage.src = mainImage.src;
            modalImage.alt = mainImage.alt;
            modal.style.display = "flex";
          });

          // Đóng modal khi nhấp ngoài ảnh
          modal.addEventListener("click", function (e) {
            if (e.target === modal) {
              modal.style.display = "none";
            }
          });

          // Chuyển ảnh trước
          prevBtn.addEventListener("click", function (e) {
            e.stopPropagation(); // Ngăn đóng modal khi nhấp vào nút
            currentModalIndex =
              (currentModalIndex - 1 + images.length) % images.length;
            modalImage.src = images[currentModalIndex].src;
            modalImage.alt = images[currentModalIndex].alt;
          });

          // Chuyển ảnh tiếp theo
          nextBtn.addEventListener("click", function (e) {
            e.stopPropagation(); // Ngăn đóng modal khi nhấp vào nút
            currentModalIndex = (currentModalIndex + 1) % images.length;
            modalImage.src = images[currentModalIndex].src;
            modalImage.alt = images[currentModalIndex].alt;
          });

          // Related Products Slider
        });
    </script>
