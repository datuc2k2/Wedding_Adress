            }

            .slide {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
            }

            .dress-card {
                width: 43%; /* Mỗi item chiếm gần nửa chiều rộng để hiển thị 2 ảnh/hàng */
                margin-bottom: 15px;
                box-sizing: border-box;
            }

                .dress-card img {
                    width: 100%; /* Ảnh chiếm toàn bộ chiều rộng của portfolio-item */
                    height: auto;
                }

            .tabs a {
                margin: 5px;
            }

            .row > div {
                flex: 0 0 50%; /* Mỗi div chiếm 50% chiều rộng */
                max-width: 50%; /* Giới hạn tối đa 50% chiều rộng */
            }

                .row > div img {
                    width: 100%; /* Đảm bảo ảnh đầy đủ chiều rộng của div chứa nó */
                    height: auto; /* Giữ tỷ lệ ảnh */
                }
        }

        /* View Mode Classes */
        .view-mode-1 {
            grid-template-columns: 1fr !important;
        }

        .view-mode-2 {
            grid-template-columns: repeat(2, 1fr) !important;
        }

        .view-mode-3 {
            grid-template-columns: repeat(3, 1fr) !important;
        }

        /* Pagination */
        .pagination {
