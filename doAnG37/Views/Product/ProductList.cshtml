            }

        /* Slider (Grid) */
        .slider-container {
            max-width: 1200px;
            margin: 0 auto;
            overflow: hidden;
            position: relative;
        }

        .slider {
            display: flex;
            transition: transform 0.5s ease;
        }

        .slide {
            display: grid;
            gap: 20px;
            min-width: 100%;
            padding: 20px;
        }

        .dress-card {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            overflow: hidden;
            text-align: center;
            position: relative; /* Thêm để định vị tên váy */
        }

            .dress-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .dress-card p {
                position: absolute;
                top: 90%;
                left: 50%;
                transform: translate(-50%, -50%);
                padding: 5px 10px;
                font-size: 16px;
                font-weight: 500;
                color: #ffffff;
                white-space: nowrap;
                border-bottom: 1px solid #fff;
                display: inline-block;
            }

        /* Responsive Grid (Override based on screen size unless view mode is selected) */
        @@media (min-width: 1024px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: repeat(3, 1fr);
            }

            .footer-menu.footer-menu-002 {
                margin-left: 60px;
            }
        }

        @@media (min-width: 768px) and (max-width: 1023px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-menu.footer-menu-002 {
                margin-left: 40px;
            }
        }

        @@media (max-width: 767px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: 1fr;
            }

            .hero {
