    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f7f7f7;
        }

        .container {
            max-width: 90%;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 50px 20px;
            background-color: #f7f7f7;
        }

            .hero h1 {
                font-size: 48px;
                color: #333;
                margin-bottom: 20px;
                font-weight: 300;
            }

            .hero p {
                font-size: 16px;
                color: #666;
                margin-bottom: 30px;
            }

        /* Tabs */
        .tabs {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

            .tabs a {
                text-decoration: none;
                color: #666;
                font-size: 16px;
                padding: 10px 20px;
                border-radius: 20px;
                background-color: #e0ded9;
            }

                .tabs a.active {
                    background-color: #a89f8f;
                    color: #fff;
                }

        /* View Mode Switch */
        .view-mode {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

            .view-mode button {
                background: none;
                border: 1px solid #d3d3d3;
                padding: 5px;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 2px;
            }

                .view-mode button.active {
                    border-color: #a89f8f;
                }

            .view-mode .box {
                width: 8px;
                height: 8px;
                background-color: #d3d3d3;
            }

            .view-mode button.active .box {
                background-color: #a89f8f;
            }

        /* Slider (Grid) */
        .slider-container {
            max-width: 1200px;
            margin: 0 auto;
            overflow: hidden;
            position: relative;
        }

        .slider {
            display: flex;
            transition: transform 0.5s ease;
        }

        .slide {
            display: grid;
            gap: 20px;
            min-width: 100%;
            padding: 20px;
        }

        .dress-card {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            overflow: hidden;
            text-align: center;
            position: relative; /* Thêm để định vị tên váy */
        }

            .dress-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .dress-card p {
                position: absolute;
                top: 90%;
                left: 50%;
                transform: translate(-50%, -50%);
                padding: 5px 10px;
                font-size: 16px;
                font-weight: 500;
                color: #ffffff;
                white-space: nowrap;
                border-bottom: 1px solid #fff;
                display: inline-block;
            }

        /* Responsive Grid (Override based on screen size unless view mode is selected) */
        @media (min-width: 1024px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: repeat(3, 1fr);
            }

            .footer-menu.footer-menu-002 {
                margin-left: 60px;
            }
        }

        @media (min-width: 768px) and (max-width: 1023px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-menu.footer-menu-002 {
                margin-left: 40px;
            }
        }

        @media (max-width: 767px) {
            .slide:not(.view-mode-1):not(.view-mode-2):not(.view-mode-3) {
                grid-template-columns: 1fr;
            }

            .hero {
                padding: 0px 20px;
            }

            .slide {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
            }

            .dress-card {
                width: 43%; /* Mỗi item chiếm gần nửa chiều rộng để hiển thị 2 ảnh/hàng */
                margin-bottom: 15px;
                box-sizing: border-box;
            }

                .dress-card img {
                    width: 100%; /* Ảnh chiếm toàn bộ chiều rộng của portfolio-item */
                    height: auto;
                }

            .tabs a {
                margin: 5px;
            }

            .row > div {
                flex: 0 0 50%; /* Mỗi div chiếm 50% chiều rộng */
                max-width: 50%; /* Giới hạn tối đa 50% chiều rộng */
            }

                .row > div img {
                    width: 100%; /* Đảm bảo ảnh đầy đủ chiều rộng của div chứa nó */
                    height: auto; /* Giữ tỷ lệ ảnh */
                }
        }

        /* View Mode Classes */
        .view-mode-1 {
            grid-template-columns: 1fr !important;
        }

        .view-mode-2 {
            grid-template-columns: repeat(2, 1fr) !important;
        }

        .view-mode-3 {
            grid-template-columns: repeat(3, 1fr) !important;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

            .pagination .dot {
                width: 40px;
                height: 40px;
                border: 1px solid #a89f8f;
                background-color: #ffffff;
                border-radius: 50%;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
                color: #333;
            }

                .pagination .dot.active {
                    background-color: #a89f8f;
                    color: #fff;
                }
